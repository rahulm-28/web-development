    <!-- Page Header -->
    <header class="masthead" style="background-image: url('/images/post.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>Compose</h1>
                        <span class="subheading">A blog by team RM</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <form name="sentMessage" id="contactForm" novalidate action="/compose" method="POST">
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Title</label>
                        <input type="text" class="form-control" placeholder="Your blog's title here." id="name" required
                            data-validation-required-message="Please enter your title." name="postTitle">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Post</label>
                        <textarea rows="5" class="form-control" placeholder="Your writing here." id="message" required
                            data-validation-required-message="Please enter a writeup." name="postBody"></textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <br>
                <div id="success"></div>
                <button type="submit" class="btn btn-primary" id="sendMessageButton">Send</button>
            </form>
        </div>
    </div>
</div>
